<div id="comments-{$tableUid}" class="comments">
    <table style="width:550px">
        {foreach item=comment from=$comments}
            <tr>
                <td style="padding:2px;vertical-align:top;">{$comment.username} </td>
                <td style="padding:2px;vertical-align:top;width:110px;">{$comment.created} </td>
                {* <td style="padding:2px;vertical-align:top;">{$comment.action}</td> *}
                {if $comment.action == 4} 
                	{* user comment *}
                	<td class="style="padding:2px;vertical-align:top;width:350px;"><strong>{$comment.comment|nl2br}</strong> </td> {* manual comment *}
                {elseif $comment.action == 6}
                	{* error msg *}
                	<td class="style="padding:2px;vertical-align:top;width:350px;"><span style="color:red;">{$comment.comment|nl2br}</span> </td> {* manual comment *}
                {else}
                	{* no special formatting *}
                	<td style="padding:2px;vertical-align:top;width:350px;">{$comment.comment} </td> {* newspaper system comment *}
                {/if}
           </tr>
        {/foreach}
    </table>
{if !$allComments}
	<div class="np_wf_link"><a href="#" class="more" onclick="getComments({$tableUid}, 1); return false;">{$LABEL.more}</a></div>
{else}
	<div class="np_wf_link"><a href="#" class="less" onclick="getComments({$tableUid}, 0); return false;">{$LABEL.less}</a></div>
{/if}
</div>