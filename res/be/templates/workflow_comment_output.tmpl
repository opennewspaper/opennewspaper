{* debug *}
<div id="comments-{$tableUid}" class="comments">
    <table style="width:550px">
        {foreach item=comment from=$comments}
            <tr>
                <td valign="top">{$comment.username} </td>
                <td valign="top" style="width:110px;">{$comment.created} </td>
                {* <td valign="top">{$comment.action}</td> *}
                {if $comment.action == 4}
                <td  valign="top"style="width:350px;"><strong>{$comment.comment|nl2br}</strong> </td> {* manual comment *}
                {else}
                <td  valign="top"style="width:350px;">{$comment.comment} </td> {* newspaper system comment *}
                {/if}
           </tr>
        {/foreach}
    </table>
{if $showMore}
	<a href="#" onclick="getComments({$tableUid}); return false;">{$LABEL.more}</a>        
{/if}
</div>
