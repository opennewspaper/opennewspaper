
<!-- start tx_newspaper/smarty/tx_newspaper_page.tmpl -->

{* Page Type containing (several) Page Zones
   Variables:
   $section 
   $page_type
   $page_zones: array (name of page zone => rendered content)
*}

<h2> {$section} {$page_type} </h2>

{foreach from=$page_zones key=name item=content}
   <div class="{$name}"> {$name}: {$content}</div>
{/foreach}

<!--  end  tx_newspaper/smarty/tx_newspaper_page.tmpl -->
